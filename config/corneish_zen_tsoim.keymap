#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

/* layers: higher number means higher precedence */
#define _DVORAK 0
#define _NAVNUM 1
#define _SYMBOL 2
#define _FUNCTN 3

/ {
    chosen {
        zmk,matrix_transform = &default_transform;
    };
};

/ {
        behaviors {
            mosl: momentary_sticky_holdtap {
                compatible = "zmk,behavior-hold-tap";
                label = "MOSLHT";
                #binding-cells = <2>;
                tapping-term-ms = <150>;
                quick-tap-ms = <0>;
                flavor = "hold-preferred";
                bindings = <&mo>, <&sl>;
            };
        };

        keymap {
                compatible = "zmk,keymap";

                default_layer {
                        label = "DVORAK";
// -----------------------------------------------------------------------------------------
// | TAB |  /  |  ,  |  .  |  P  |  Y  |   |  F  |  G  |  L  |  R  |  Z  | \   |
// | ESC |  A  |  O  |  E  |  I  |  U  |   |  D  |  H  |  T  |  N  |  S  | RET |
// | SHF |  ;  |  Q  |  J  |  K  |  X  |   |  B  |  M  |  W  |  V  |  C  | SHF |
//                   | GUI | MSL | BSP |   | CTL | SPC | ALT |
                        bindings = <
    &kp TAB     &kp FSLH    &kp COMMA   &kp DOT     &kp P   &kp Y       &kp F   &kp G   &kp L   &kp R   &kp Z   &kp BSLH
    &kp ESC     &kp A       &kp O       &kp E       &kp I   &kp U       &kp D   &kp H   &kp T   &kp N   &kp S   &kp RET
    &kp LSHFT   &kp SEMI    &kp Q       &kp J       &kp K   &kp X       &kp B   &kp M   &kp W   &kp V   &kp C   &kp RSHFT
                                &kp LGUI    &mosl _SYMBOL _FUNCTN  &kp BSPC      &kp RCTL    &lt _NAVNUM SPACE   &kp RALT
                        >;
                };

                navnum_layer {
                        label = "NAVNUM";
// -----------------------------------------------------------------------------------------
// |     | --- |  7  |  8  |  9  | VLM |   | VLU | VLD | BRD | BRU | --- | --- |
// |     | --- |  4  |  5  |  6  |  0  |   | LFT | DWN |  UP | RGT | --- |     |
// |     | --- |  1  |  2  |  3  |  x  |   |  =  |  *  |  -  |  +  |  /  | --- |
//                   |     |     |     |   |     |     |     |
                        bindings = <
   &trans   &none   &kp N7  &kp N8  &kp N9  &kp C_MUTE  &kp C_VOL_UP    &kp C_VOL_DN    &kp C_BRI_DN    &kp C_BRI_UP    &none       &none
   &trans   &none   &kp N4  &kp N5  &kp N6  &kp N0      &kp LEFT        &kp DOWN        &kp UP          &kp RIGHT       &none       &trans
   &trans   &none   &kp N1  &kp N2  &kp N3  &kp X       &kp EQUAL       &kp ASTRK       &kp MINUS       &kp PLUS        &kp FSLH    &none
                            &trans  &trans  &trans      &trans          &trans          &trans
                        >;
                };

                symbol_layer {
                        label = "SYMBOL";
// -----------------------------------------------------------------------------------------
// |     | --- |  &  |  *  |  <  |  >  |   |  ~  |  _  |  [  |  ]  | --- | --- |
// |     | --- |  $  |  %  |  ^  |  '  |   |  "  |  {  |  (  |  )  |  }  |     |
// |     | --- |  !  |  @  |  #  |  `  |   |  =  |  *  |  -  |  +  |  /  |     |
//                   |     |     |     |   |     |     |     |
                        bindings = <
   &trans   &none   &kp AMPS    &kp ASTRK   &kp LT      &kp GT      &kp TILDE   &kp UNDER   &kp LBKT    &kp RBKT    &none       &none
   &trans   &none   &kp DLLR    &kp PRCNT   &kp CARET   &kp SQT     &kp DQT     &kp LBRC    &kp LPAR    &kp RPAR    &kp RBRC    &trans
   &trans   &none   &kp EXCL    &kp AT      &kp POUND   &kp GRAVE   &kp EQUAL   &kp ASTRK   &kp MINUS   &kp PLUS    &kp FSLH    &trans
                                &trans      &trans      &trans      &trans      &trans      &trans
                        >;
                };

                functn_layer {
                        label = "FUNCTN";
// -----------------------------------------------------------------------------------------
// |     |cmds5| ctl<| ctl^| ctl>|cmds4|   | --- | F7  | F8  | F9  | F10 | BTP |
// |     | cmdz| cmdx| cmdc| cmdv|cmdv*|   | --- | F4  | F5  | F6  | F11 | BTN |
// | CLK | --- | cmdb| cmdi| cmdu| --- |   | --- | F1  | F2  | F3  | F12 | BTC |
//                   |     |     | TO3 |   | TO0 | TO1 | TO2 |
                        bindings = <
   &trans   &kp LG(LS(N5))  &kp LC(LEFT)    &kp LC(UP)  &kp LC(RIGHT)   &kp LG(LS(N4))      &none   &kp F7  &kp F8  &kp F9  &kp F10 &bt BT_PRV
   &trans   &kp LG(Z)       &kp LG(X)       &kp LG(C)   &kp LG(V)       &kp LG(LA(LS(V)))   &none   &kp F4  &kp F5  &kp F6  &kp F11 &bt BT_NXT
   &kp CAPS &none           &kp LG(B)       &kp LG(I)   &kp LG(U)       &none               &none   &kp F1  &kp F2  &kp F3  &kp F12 &bt BT_CLR
                                            &trans      &trans          &to _FUNCTN         &to _DVORAK &to _NAVNUM &to _SYMBOL
                        >;
                };
        };
};
